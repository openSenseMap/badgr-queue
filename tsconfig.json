{
    "compilerOptions": {
        "outDir": "build",
        "declaration": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "ES2015"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}